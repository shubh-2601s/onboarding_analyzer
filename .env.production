# üöÄ Production Environment Configuration
# Onboarding Analyzer - Enterprise Analytics Platform

# ===============================================
# üåü APPLICATION SETTINGS
# ===============================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# ===============================================
# üîí SECURITY CONFIGURATION
# ===============================================
SECRET_KEY=your-super-secure-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too
CORS_ORIGINS=https://yourapp.com,https://www.yourapp.com
ALLOWED_HOSTS=yourapp.com,www.yourapp.com

# ===============================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ===============================================
DATABASE_URL=postgresql://username:password@db-host:5432/onboarding_analyzer
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# SQLite fallback (for development/testing only)
SQLITE_DATABASE_PATH=./backend/database.db

# ===============================================
# üìä REDIS CONFIGURATION
# ===============================================
REDIS_URL=redis://redis-host:6379/0
REDIS_PASSWORD=your-redis-password
REDIS_SSL=true
REDIS_CONNECTION_POOL_SIZE=50

# ===============================================
# üîÑ CELERY CONFIGURATION
# ===============================================
CELERY_BROKER_URL=redis://redis-host:6379/1
CELERY_RESULT_BACKEND=redis://redis-host:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC
CELERY_WORKER_CONCURRENCY=4

# ===============================================
# üìà ANALYTICS INTEGRATIONS
# ===============================================

# PostHog Configuration
POSTHOG_PROJECT_API_KEY=phc_your_posthog_api_key
POSTHOG_HOST=https://app.posthog.com
POSTHOG_PERSONAL_API_KEY=phx_your_personal_api_key

# Google Analytics (optional)
GA_MEASUREMENT_ID=G-XXXXXXXXXX
GA_API_SECRET=your-ga-api-secret

# Mixpanel (optional)
MIXPANEL_TOKEN=your-mixpanel-token

# ===============================================
# ü§ñ AI/ML CONFIGURATION
